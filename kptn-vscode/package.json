{
  "name": "kptn",
  "displayName": "kptn",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/rjruizes/kptn.git",
    "directory": "kptn-vscode"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:kptn.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kptn.helloWorld",
        "title": "Fetch kptn message"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run vendor-python && npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "vendor-python": "node scripts/vendor-python.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
